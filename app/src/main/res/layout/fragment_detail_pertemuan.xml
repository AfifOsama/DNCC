<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.pertemuan.DetailPertemuanFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/action_bar" android:id="@+id/action_bar"/>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/header_detail_pertemuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rectangle_actionbar"
            android:elevation="5dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/action_bar">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="147dp">

                <TextView
                    android:id="@+id/tv_pelatihan_title"
                    style="@style/nunitoBold_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/pelatihan_divisi"
                    android:textColor="@color/black_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_pelatihan_description"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lines="3"
                    style="@style/nunitoRegular_12"
                    android:textColor="@color/black_text"
                    android:text="@string/divisi_description"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_pelatihan_title" />

                <TextView
                    android:id="@+id/tv_link_wag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="24dp"
                    style="@style/robotoMedium_12"
                    android:textColor="@color/dark_blue"
                    app:layout_constraintTop_toBottomOf="@id/tv_pelatihan_description"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/link_group_whatsapp"/>


                <ImageView
                    android:id="@+id/static_img_pelatihan"
                    android:layout_width="112dp"
                    android:layout_height="80dp"
                    android:src="@drawable/divisi_mobile"
                    android:layout_marginEnd="24dp"
                    android:contentDescription="@string/pelatihan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/tv_pertemuan_ke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_pertemuan_ke"
            style="@style/nunitoBold_16"
            android:textColor="@color/black_text"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_detail_pertemuan"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_nama_pertemuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="@color/white"
            android:elevation="8dp"
            app:cardMaxElevation="12dp"
            app:cardCornerRadius="10dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_pertemuan_ke"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="4dp">
                <ImageView
                    android:id="@+id/icon_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_menu_book"
                    android:contentDescription="@string/icon_book"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginVertical="4dp"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="@string/judul_pertemuan"
                    android:layout_marginStart="8dp"
                    style="@style/nunitoRegular_14"
                    android:textColor="@color/black_text"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon_book"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="@color/white"
            android:elevation="8dp"
            app:cardMaxElevation="12dp"
            app:cardCornerRadius="10dp"
            android:layout_marginVertical="8dp"
            app:layout_constraintTop_toBottomOf="@id/card_nama_pertemuan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="4dp">
                <ImageView
                    android:id="@+id/icon_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_attach_file"
                    android:contentDescription="@string/icon_book"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginVertical="4dp"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:text="@string/myfile_docx"
                    style="@style/nunitoRegular_14"
                    android:textColor="@color/black_text"
                    android:layout_marginStart="8dp"
                    android:lines="1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon_file"
                    />

                <TextView
                    android:id="@+id/btn_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/nunitoBold_14"
                    android:textColor="@color/primary_blue"
                    android:text="@string/download"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/card_file"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>